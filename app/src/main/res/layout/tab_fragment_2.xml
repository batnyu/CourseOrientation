<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1.01"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#e7e7e7">

    <TextView
        android:text="Vous n'avez téléchargé aucun parcours !"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/noParcours2"
        android:layout_weight="1"
        android:gravity="center_vertical|center"
        android:textColor="@android:color/background_dark"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/interface2">

        <TextView
            android:text="Chronomètre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/numEquipe"
            android:layout_alignStart="@+id/numEquipe"
            android:id="@+id/textView_course"
            android:layout_marginTop="2dp"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <Chronometer
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chronometer1"
            android:fontFamily="sans-serif"
            android:textSize="25sp"
            android:textAlignment="center" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffd165"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="2dp"
                android:id="@+id/startBalise">

                <TextView
                    android:text="Balise départ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/numEquipe"
                    android:layout_alignStart="@+id/numEquipe"
                    android:id="@+id/textView_balise_depart"
                    android:layout_marginTop="2dp"
                    android:textAllCaps="false"
                    android:textSize="14sp" />

                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/numEquipe"
                    android:layout_alignStart="@+id/numEquipe"
                    android:id="@+id/textView_balise_depart_nb"
                    android:layout_marginTop="2dp"
                    android:textAllCaps="false"
                    android:textSize="25sp"
                    android:textColor="@android:color/background_dark" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#b089ff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="2dp"
                android:id="@+id/endBalise">

                <TextView
                    android:text="Balise départ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/numEquipe"
                    android:layout_alignStart="@+id/numEquipe"
                    android:id="@+id/textView_balise_fin"
                    android:layout_marginTop="2dp"
                    android:textAllCaps="false"
                    android:textSize="14sp" />

                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/numEquipe"
                    android:layout_alignStart="@+id/numEquipe"
                    android:id="@+id/textView_balise_fin_nb"
                    android:layout_marginTop="2dp"
                    android:textAllCaps="false"
                    android:textSize="25sp"
                    android:textColor="@android:color/background_dark" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#65c4ff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="2dp"
                android:id="@+id/totalBalise">

                <TextView
                    android:text="Total balises"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/numEquipe"
                    android:layout_alignStart="@+id/numEquipe"
                    android:id="@+id/textView_total_balises"
                    android:layout_marginTop="2dp"
                    android:textAllCaps="false"
                    android:textSize="14sp" />

                <TextView
                    android:text="0/10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/numEquipe"
                    android:layout_alignStart="@+id/numEquipe"
                    android:id="@+id/textView_total_balises_nb"
                    android:layout_marginTop="2dp"
                    android:textAllCaps="false"
                    android:textSize="25sp"
                    android:textColor="@android:color/background_dark" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff6161"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="2dp"
                android:id="@+id/lastBalise">

                <TextView
                    android:text="Dernière balise pointée"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/numEquipe"
                    android:layout_alignStart="@+id/numEquipe"
                    android:id="@+id/textView_balise_pointee"
                    android:layout_marginTop="2dp"
                    android:textAllCaps="false"
                    android:textSize="14sp" />

                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/numEquipe"
                    android:layout_alignStart="@+id/numEquipe"
                    android:id="@+id/textView_balise_pointee_nb"
                    android:layout_marginTop="2dp"
                    android:textAllCaps="false"
                    android:textSize="25sp"
                    android:textColor="@android:color/background_dark" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#cbff6b"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="2dp"
                android:id="@+id/suivante">

                <TextView
                    android:text="Balise suivante à pointer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/numEquipe"
                    android:layout_alignStart="@+id/numEquipe"
                    android:id="@+id/textView_balise_suivante"
                    android:layout_marginTop="2dp"
                    android:textAllCaps="false"
                    android:textSize="14sp" />

                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/numEquipe"
                    android:layout_alignStart="@+id/numEquipe"
                    android:id="@+id/textView_balise_suivante_nb"
                    android:layout_marginTop="2dp"
                    android:textAllCaps="false"
                    android:textSize="25sp"
                    android:textColor="@android:color/background_dark" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scan_format"
            android:layout_below="@+id/scan_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scan_content"
            android:layout_below="@+id/title1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:id="@+id/scan_button"
            android:layout_gravity="center_vertical"
            android:text="SCAN"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:textSize="20sp" />

    </LinearLayout>


</RelativeLayout>