<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/fond">

    <TextView
        android:text="Vous n'avez pas téléchargé de parcours"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/noParcours"
        android:gravity="center_vertical|center"
        android:textColor="@android:color/background_dark"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <LinearLayout android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="fill_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
        android:paddingBottom="5dp">
    <!-- Header -->


        <CheckBox
            android:theme="@style/checkBoxStyle"
            android:text="non scanné"
            android:layout_width="match_parent"
            android:id="@+id/checkBoxNotChecked"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />

        <LinearLayout android:id="@+id/header"
        android:background="#9b9b9b"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        >
        <TextView android:id="@+id/item1"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:height="30dip"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:text="Balise"
            android:paddingLeft="10dp"
            android:background="@android:color/holo_red_dark"
            android:paddingRight="10dp"
            android:width="63dip"
            android:layout_weight="0.24" />
        <TextView android:id="@+id/item2"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:text="Temps"
            android:width="80dip"
            android:height="30dip"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:paddingLeft="10dp"
            android:background="@color/zxing_possible_result_points"
            android:layout_weight="0.21" />
        <TextView android:id="@+id/item3"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:width="120dip"
            android:height="30dip"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:paddingLeft="10dp"
            android:text="Suivante"
            android:background="@android:color/holo_blue_light"
            android:layout_weight="0.30" />
        <TextView android:id="@+id/item4"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:width="100dip"
            android:height="30dip"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:paddingLeft="10dp"
            android:text="Poste"
            android:background="@android:color/holo_purple"
            android:layout_weight="0.25" />
    </LinearLayout>

        <LinearLayout android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
            android:layout_weight="1">

            <ListView android:id="@+id/listview"
                android:layout_height="match_parent"
                android:layout_width="match_parent">
            </ListView>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="50dp"
                android:id="@+id/layoutEnvoiParkour"
                android:background="@drawable/bg_button_big">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Envoi en cours"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white" />

                <ProgressBar
                    style="@style/Widget.AppCompat.ProgressBar"
                    android:id="@+id/progressBarSend"
                    android:layout_height="20dp"
                    android:layout_width="50dp" />

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:text="Envoyer le parcours"
                android:id="@+id/buttonSend"
                android:layout_gravity="center_vertical|center_horizontal"
                android:paddingBottom="18dp"
                android:paddingTop="18dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_big" />

        </FrameLayout>

        <!-- List Divider
    <View android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="?android:attr/listDivider" /> -->

    <!-- ListView (grid_items) -->

    </LinearLayout>

</RelativeLayout>